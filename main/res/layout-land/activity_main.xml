<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lex.potatohead.MainActivity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/potato_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            app:srcCompat="@drawable/body"
            android:id="@+id/image_potato"
            android:layout_width="wrap_content"
            android:layout_height="277dp"
            android:cropToPadding="false"
            android:adjustViewBounds="false"
            android:contentDescription="@drawable/body" />

        <ImageView
            android:layout_height="284dp"
            app:srcCompat="@drawable/arms"
            android:id="@+id/image_arms"
            android:layout_width="match_parent"
            android:contentDescription="@drawable/arms"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            app:srcCompat="@drawable/ears"
            android:id="@+id/image_ears"
            android:contentDescription="@drawable/ears"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="267dp"
            app:srcCompat="@drawable/eyebrows"
            android:id="@+id/image_eyebrows"
            android:visibility="invisible"
            android:contentDescription="@drawable/eyebrows" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="257dp"
            app:srcCompat="@drawable/eyes"
            android:id="@+id/image_eyes"
            android:visibility="invisible"
            android:contentDescription="@drawable/eyes" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="265dp"
            app:srcCompat="@drawable/glasses"
            android:id="@+id/image_glasses"
            android:visibility="invisible"
            android:contentDescription="@drawable/glasses" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="225dp"
            app:srcCompat="@drawable/hat"
            android:id="@+id/image_hat"
            android:visibility="invisible"
            android:contentDescription="@drawable/hat" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="263dp"
            app:srcCompat="@drawable/mouth"
            android:id="@+id/image_mouth"
            android:visibility="invisible"
            android:contentDescription="@drawable/mouth" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="251dp"
            app:srcCompat="@drawable/mustache"
            android:id="@+id/image_mustache"
            android:visibility="invisible"
            android:contentDescription="@drawable/mustache" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="254dp"
            app:srcCompat="@drawable/nose"
            android:id="@+id/image_nose"
            android:visibility="invisible"
            android:contentDescription="@drawable/nose" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="278dp"
            app:srcCompat="@drawable/shoes"
            android:id="@+id/image_shoes"
            android:visibility="invisible"
            android:contentDescription="@drawable/shoes" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/checkboxes"
        tools:ignore="NotSibling"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="268dp"
        android:layout_marginStart="268dp">

        <TextView
            android:text="@string/check_the_checkboxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/check_the_checkboxes"
            tools:text="@string/check_the_checkboxes"
            android:textAlignment="center" />

        <CheckBox
            android:text="@string/arms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_arms"
            android:layout_marginTop="60dp"
            android:layout_marginStart="70dp"
            tools:text="@string/arms"
            android:onClick="onCheckboxCLicked"
            android:checked="false" />

        <CheckBox
            android:text="@string/ears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_ears"
            android:layout_marginTop="90dp"
            android:layout_marginStart="70dp"
            tools:text="@string/ears"
            android:onClick="onCheckboxCLicked"
            android:checked="false" />

        <CheckBox
            android:text="@string/eyebrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_eyebrows"
            android:layout_marginTop="120dp"
            android:layout_marginStart="70dp"
            tools:text="@string/eyebrows"
            android:onClick="onCheckboxCLicked"
            android:checked="false" />

        <CheckBox
            android:text="@string/eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_eyes"
            android:layout_marginTop="150dp"
            android:layout_marginStart="70dp"
            tools:text="@string/eyes"
            android:onClick="onCheckboxCLicked"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_hat"
            tools:text="@string/hat"
            android:text="@string/hat"
            android:layout_marginStart="190dp"
            android:layout_marginTop="60dp"
            android:onClick="onCheckboxCLicked"
            android:checked="false" />

        <CheckBox
            android:text="@string/mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_mouth"
            android:layout_marginStart="190dp"
            android:layout_marginTop="90dp"
            android:onClick="onCheckboxCLicked"
            android:checked="false" />

        <CheckBox
            android:text="@string/mustache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_mustache"
            tools:text="@string/mustache"
            android:layout_marginStart="190dp"
            android:layout_marginTop="120dp"
            android:onClick="onCheckboxCLicked"
            android:checked="false" />

        <CheckBox
            android:text="@string/nose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_nose"
            android:layout_marginStart="190dp"
            android:layout_marginTop="150dp"
            android:onClick="onCheckboxCLicked"
            android:checked="false" />

        <CheckBox
            android:text="@string/shoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_shoes"
            android:layout_marginStart="190dp"
            android:layout_marginTop="180dp"
            tools:text="@string/shoes"
            android:onClick="onCheckboxCLicked"
            android:checked="false" />

        <CheckBox
            android:text="@string/glasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox_glasses"
            android:layout_marginTop="180dp"
            android:layout_marginStart="70dp"
            tools:text="@string/glasses"
            android:onClick="onCheckboxCLicked"
            android:checked="false" />

    </FrameLayout>

</RelativeLayout>
